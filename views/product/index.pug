extends ../layouts/index
block content
    section.ftco-section
        .container
                .row
                    .col-lg-3.mb-3
                        .product.mb-0.p-3(style='background: white; color: black')
                            span Danh sách sản phầm
                            span(style='float: right')= size
                            each producer in producers
                                .product.mb-0
                                    a.nav-link(href="/products/load/"+producer.slug, style="text-transform: uppercase; color: #333")= producer.name
                    .col-lg-9
                        block load