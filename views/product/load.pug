extends ../product/index
block load
    .row
        each item in data
            .col-md-6.col-lg-4.ftco-animate
                .product
                    if(item.image === '')
                        a.img-prod(href='/products/id='+item.id)
                            img.img-fluid(src=item.image, alt='Colorlib Template')
                            if(item.new === true)
                                span.status New
                            .overlay
                    else
                        a.img-prod(href='/products/id='+item.id)
                            img.img-fluid(src= item.image, alt='Colorlib Template')
                            if(item.new === true)
                                span.status New
                            .overlay
                    .text.py-3.pb-4.px-3.text-center
                        h3
                            a(href='#')= item.name
