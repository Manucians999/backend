<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
        // ===============================================================================================
        link(rel='icon', type='image/png', href='/login/images/icons/favicon.ico')
        // ===============================================================================================
        link(rel='stylesheet', type='text/css', href='/login/vendor/bootstrap/css/bootstrap.min.css')
        // ===============================================================================================
        link(rel='stylesheet', type='text/css', href='/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css')
        // ===============================================================================================
        link(rel='stylesheet', type='text/css', href='/login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css')
        // ===============================================================================================
        link(rel='stylesheet', type='text/css', href='/login/vendor/animate/animate.css')
        // ===============================================================================================
        link(rel='stylesheet', type='text/css', href='/login/vendor/css-hamburgers/hamburgers.min.css')
        // ===============================================================================================
        link(rel='stylesheet', type='text/css', href='/login/vendor/animsition/css/animsition.min.css')
        // ===============================================================================================
        link(rel='stylesheet', type='text/css', href='/login/vendor/select2/select2.min.css')
        // ===============================================================================================
        link(rel='stylesheet', type='text/css', href='/login/vendor/daterangepicker/daterangepicker.css')
        // ===============================================================================================
        link(rel='stylesheet', type='text/css', href='/login/css/util.css')
        link(rel='stylesheet', type='text/css', href='/login/css/main.css')
        // ===============================================================================================

    body
        .limiter
            .container-login100
                .wrap-login100
                    .login100-more(style="background-image: url('/image/center.jpg');")
                    form.login100-form.validate-form(method="POST")
                        span.login100-form-title.p-b-43 Login
                        
                        .wrap-input100.validate-input(data-validate='Valid username is required: abc')
                            input.input100(type='text', name='username', value=values ? values.username : "")
                            span.focus-input100
                            span.label-input100 Email/Username
                        .wrap-input100.validate-input(data-validate='Password is required')
                            input.input100(type='password', name='password', value=values ? values.password : "")
                            span.focus-input100
                            span.label-input100 Password
                        .flex-sb-m.w-full.p-t-3.p-b-32
                            div
                                a.txt1(href='/auth/register') Đăng ký
                            div
                                a.txt1(href='#') Forgot Password?
                        .container-login100-form-btn
                            if(message)
                                span(style="color: red")= message
                            button.login100-form-btn Login
                        .text-center.p-t-46.p-b-20
                            span.txt2 or sign up using
                        .login100-form-social.flex-c-m
                            a.login100-form-social-item.flex-c-m.bg2.m-r-5(href='/')
                                i.fa.fa-arrow-left(aria-hidden='true')
                            a.login100-form-social-item.flex-c-m.bg1.m-r-5(href='#')
                                i.fa.fa-facebook-f(aria-hidden='true')
                            a.login100-form-social-item.flex-c-m.bg2.m-r-5(href='#')
                                i.fa.fa-twitter(aria-hidden='true')
                    
        // ===============================================================================================
        script(src='/login/vendor/jquery/jquery-3.2.1.min.js')
        // ===============================================================================================
        script(src='/login/vendor/animsition/js/animsition.min.js')
        // ===============================================================================================
        script(src='/login/vendor/bootstrap/js/popper.js')
        script(src='/login/vendor/bootstrap/js/bootstrap.min.js')
        // ===============================================================================================
        script(src='/login/vendor/select2/select2.min.js')
        // ===============================================================================================
        script(src='/login/vendor/daterangepicker/moment.min.js')
        script(src='/login/vendor/daterangepicker/daterangepicker.js')
        // ===============================================================================================
        script(src='/login/vendor/countdowntime/countdowntime.js')
        // ===============================================================================================
        script(src='/login/js/main.js')
