extends ../../layouts/admin
block content

    main
        .container-fluid
            h1.mt-4 Danh sách người dùng
            ol.breadcrumb.mb-4
                li.breadcrumb-item
                    a(href='/admin') Admin
                li.breadcrumb-item.active Users
            .card.mb-4
                .card-header
                    .row
                        .col-sm-9.col-md-10
                            i.fas.fa-table.mr-1
                            span Danh sách người dùng
                        .col-sm-3.col-md-2
                            a.btn.btn-primary(href="/admin/products/create") Thêm mới
                .card-body
                    .table-responsive
                        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
                            thead
                                tr
                                    th STT
                                    th Họ tên
                                    th Username
                                    th Email
                                    th Số điện thoại
                                    th Địa chỉ
                                    th Quyền
                                    th Tác vụ
                            tbody
                                each user, index in users
                                    tr
                                        td= index + 1
                                        td= user.fullName
                                        td= user.username
                                        td= user.email
                                        td= user.phone
                                        td= user.address
                                        td
                                            a(href="/admin/users/"+user.id).btn.btn=user.role.slug === "admin" ? "Admin" : "User"
                                        td
                                            a(href="/admin/users/delete="+ user.id).btn.btn-danger Xóa

